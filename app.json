{
  "expo": {
    "name": "Polaris",
    "slug": "polaris-app",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.polaris.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to provide location-based features. You control what data is shared.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to provide location-based features. You control what data is shared.",
        "NSBrowsingTopicsUsageDescription": "We track your browsing interests to provide better recommendations. You control what data is shared."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Polaris to access your location."
        }
      ],
      [
        "expo-background-fetch",
        {
          "minimumInterval": 900
        }
      ]
    ],
    "scheme": "polaris",
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "mjs"
      ]
    }
  }
}
